{
    "manifest_version":3,
    "name": "TabGuard",
    "description": "Find out which inactive tabs are wasting resources",
    "version":"1.0",
    "author":"Digital Sustainability Audits",
    "action": {
        "default_icon": "src/assets/icon.png", 
        "default_title": "TabGuard saved resources"
    },
    "background": {
        "service_worker": "src/background/background.js",
        "pages": ["src/background/background.html"]
    },
    "permissions": ["tabs", "processes"]
}